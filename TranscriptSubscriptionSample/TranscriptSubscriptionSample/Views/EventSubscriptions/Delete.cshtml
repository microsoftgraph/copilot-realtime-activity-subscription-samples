@model TranscriptSubscriptionSample.Models.EventSubscriptionViewModel

@{
    ViewData["Title"] = "Delete Event Subscription";
}

<h2 class="headerText">Delete Event Subscription</h2>

<h3 class="text-danger">Are you sure you want to delete this event subscription?</h3>
<div>
    <h4>Event Subscription Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrganizerId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrganizerId)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ExpirationDate)</dt>
