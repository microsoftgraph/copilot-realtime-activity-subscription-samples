@model IEnumerable<TranscriptSubscriptionSample.Models.SubscriptionViewModel>

@{
    ViewData["Title"] = "Subscriptions";
}

<h2 class="headerText">Active Subscriptions</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Subscription</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Meeting URL</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.MeetingUrl)</td>
                <td>
                    <span class="badge @(item.Status == SubscriptionStatus.Active ? "bg-success" : item.Status == SubscriptionStatus.Error ? "bg-danger" : "bg-secondary")">
                        @Html.DisplayFor(modelItem => item.Status)
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Transcripts" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Transcripts</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>